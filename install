#!/usr/bin/env bash

DOTFILES=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

mkdir -p $HOME/.config

create_symlink() {
    local source_file=$1
    local target_file=$2

    if [ -e "$target_file" ]; then
        rm -rf $target_file
    fi

    ln -sf "$source_file" "$target_file"
}

create_symlink "$DOTFILES/tmux/tmux.conf" "$HOME/.tmux.conf"
create_symlink "$DOTFILES/nvim" "$HOME/.config/nvim"
create_symlink "$DOTFILES/phpactor" "$HOME/.config/phpactor"
create_symlink "$DOTFILES/alacritty/alacritty.toml" "$HOME/.config/alacritty/alacritty.toml"
create_symlink "$DOTFILES/alacritty/alacritty.yml" "$HOME/.config/alacritty/alacritty.yml"
create_symlink "$DOTFILES/alacritty/catppuccin-mocha.toml" "$HOME/.config/alacritty/catppuccin-mocha.toml"
create_symlink "$DOTFILES/alacritty/github-dark.toml" "$HOME/.config/alacritty/github-dark.toml"
create_symlink "$DOTFILES/alacritty/nordic.toml" "$HOME/.config/alacritty/nordic.toml"
